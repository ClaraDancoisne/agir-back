// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id    String  @id
  name  String
  dashboard Dashboard?
}
model Compteur {
  id    String  @id
  titre  String
  valeur String
  dashboard Dashboard @relation(fields: [dashboardId], references: [id])
  dashboardId String
}
model Quizz {
  id    String  @id
  titre  String
  questions QuizzQuestion[]
}
model QuizzQuestion {
  id    String  @id
  libelle  String
  propositions String[]
  solution String
  quizz Quizz @relation(fields: [quizzId], references: [id])
  quizzId String
}
model Badge {
  id    String  @id
  titre  String
  date DateTime
  dashboard Dashboard @relation(fields: [dashboardId], references: [id])
  dashboardId String
}
model Dashboard {
  id    String  @id
  compteurs Compteur[]
  badges Badge[]
  todoQuizz String[]
  doneQuizz String[]
  utilisateur Utilisateur @relation(fields: [utilisateurId], references: [id])
  utilisateurId String @unique
}
